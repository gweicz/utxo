{
  "$id": "https://spec.utxo.cz/schema/1/tracks.json",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "name"
    ],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "name": {
        "type": "string"
      },
      "shortname": {
        "type": "string"
      },
      "examples": {
        "type": "string"
      },
      "hidden": {
        "type": "boolean"
      },
      "pretalxId": {
        "type": "string"
      }
    }
  }
}